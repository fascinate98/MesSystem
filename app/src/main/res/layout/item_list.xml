<?xml version="1.0" encoding="utf-8"?><!--
FrameLayout is used as top level layout because when the CardView is getting
animated, it needs to stay centered. Otherwise we need to animate x and y values
too. layout_gravity="center_horizontal" is a lot simpler.
-->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:background="@color/zlightgray"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        tools:layout_marginLeft="20dp"
        tools:layout_marginRight="20dp">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/card_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--
            scale_container is used to scale down the item when the scale down
            animation happens. card_container re-sizes height and width while
            scale_container scales the inside views to make it look natural
            -->
            <RelativeLayout
                android:id="@+id/scale_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingTop="20dp"
                android:paddingRight="16dp"
                android:paddingBottom="20dp"
                android:transformPivotX="0dp">

                <ImageView
                    android:id="@+id/arrow_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/title"
                    android:layout_alignBottom="@+id/subtitle1"
                    android:layout_marginEnd="16dp"
                    app:srcCompat="@drawable/ic_main_list_arrow"
                    app:tint="@color/zbabyblue" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JOBORDER_ABC123"
                    android:layout_toEndOf="@id/arrow_icon" />

                <TextView
                    android:id="@+id/subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@id/arrow_icon"
                    android:text="COIL_1234_4567_AB"
                    android:textSize="10dp" />

                <ImageView
                    android:id="@+id/subtitle2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/title"
                    android:layout_alignBottom="@id/subtitle1"
                    android:layout_alignParentRight="true"
                    android:text="작업중"
                    android:textSize="10dp"
                    app:srcCompat="@drawable/ic_main_status"
                    app:tint="@color/zblue" />

                <LinearLayout
                    android:id="@+id/expand_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/subtitle2"
                    android:layout_alignStart="@id/arrow_icon"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#aaa"
                        android:orientation="horizontal"
                        android:padding="14dp">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#abc"
                        android:orientation="horizontal"
                        android:padding="14dp">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#aaa"
                        android:orientation="horizontal"
                        android:padding="14dp">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#abc"
                        android:orientation="horizontal"
                        android:padding="14dp">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#aaa"
                        android:orientation="horizontal"
                        android:padding="14dp">

                        <ImageButton
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"

                            />
                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spn_SPList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="30dp"
                            android:spinnerMode="dropdown"
                            android:popupBackground="#2540FF"/>

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>